{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://kickstartds.com/visual.schema.json",
  "title": "Visual",
  "description": "Component to present rich combinations of text and media, best used sequentially",
  "type": "object",
  "properties": {
    "height": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/height"
    },
    "media": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/media"
    },
    "overlay": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/overlay"
    },
    "box": {
      "type": "object",
      "title": "Text box",
      "description": "Content and style configuration for the text box",
      "properties": {
        "enabled": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/enabled"
        },
        "headline": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/headline"
        },
        "text": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/text"
        },
        "link": {
          "title": "Link",
          "description": "Text box link configuration",
          "type": "object",
          "properties": {
            "enabled": {
              "title": "Display Link",
              "description": "Toggles visibility of the link",
              "type": "boolean",
              "default": true
            },
            "buttons": {
              "type": "array",
              "items": {
                "allOf": [
                  {
                    "type": "object",
                    "properties": {
                      "variant": {
                        "default": "outline-inverted"
                      }
                    }
                  },
                  {
                    "$ref": "http://frontend.ruhmesmeile.com/base/atoms/link-button.schema.json"
                  }
                ]
              }
            }
          }
        },
        "indent": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/indent"
        },
        "horizontal": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/horizontal"
        },
        "vertical": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/vertical"
        },
        "background": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/box/properties/background"
        }
      }
    },
    "inbox": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/inbox"
    },
    "skipButton": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/skipButton"
    },
    "className": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/visual.schema.json#/properties/className"
    }
  },
  "required": ["box"]
}
