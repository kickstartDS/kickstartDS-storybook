{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://kickstartds.com/visual.schema.json",
  "title": "Visual",
  "type": "object",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "box": {
          "type": "object",
          "properties": {
            "links": {
              "type": "array",
              "items": {
                "allOf": [
                  {
                    "$ref": "http://kickstartds.com/button.schema.json"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "variant": {
                        "default": "outline"
                      },
                      "inverted": {
                        "default": true
                      }
                    }
                  }
                ]
              },
              "default": [
                {
                  "label": "Lorem Ipsum"
                }
              ]
            }
          }
        }
      }
    },
    {
      "$ref": "http://schema.kickstartds.com/content/visual.schema.json"
    }
  ]
}
