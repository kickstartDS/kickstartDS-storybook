{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://kickstartds.com/post.schema.json",
  "title": "Post",
  "type": "object",
  "properties": {
    "aside": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/post-aside.schema.json"
    },
    "head": {
      "$ref": "http://frontend.ruhmesmeile.com/blog/molecules/post-head.schema.json"
    },
    "shareBar": {
      "type": "object",
      "properties": {
        "headline": {
          "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/content"
        },
        "headlineLevel": {
          "$ref": "http://frontend.ruhmesmeile.com/base/molecules/headline.schema.json#/properties/level"
        },
        "links": {
          "title": "Share Links",
          "type": "array",
          "items": {
            "title": "Share Link",
            "type": "object",
            "properties": {
              "href": {
                "type": "string",
                "format": "uri"
              },
              "icon": {
                "type": "string"
              },
              "newTab": {
                "type": "boolean"
              }
            }
          }
        }
      }
    }
  }
}
