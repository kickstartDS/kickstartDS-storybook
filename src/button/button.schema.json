{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://kickstartds.com/button.schema.json",
  "title": "Button",
  "allOf": [
    {
      "type": "object",
      "properties": {
        "href": {
          "title": "Button href?",
          "description": "Link used for button",
          "type": "string",
          "format": "uri",
          "examples": ["https://example.com"]
        },
        "highlighted": {
          "type": "boolean",
          "title": "Button Highlighted Style",
          "default": false
        },
        "deko": {
          "type": "boolean",
          "title": "Button Deko Style",
          "default": false
        }
      }
    },
    {
      "$ref": "http://schema.kickstartds.com/base/button.schema.json"
    }
  ]
}
