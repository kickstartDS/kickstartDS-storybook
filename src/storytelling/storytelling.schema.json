{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://kickstartds.com/storytelling.schema.json",
  "title": "Storytelling",
  "description": "Component to present rich combinations of text and media, best used sequentially",
  "type": "object",
  "properties": {
    "backgroundImage": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/backgroundImage"
    },
    "backgroundColor": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/backgroundColor"
    },
    "full": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/full"
    },
    "image": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/image"
    },
    "box": {
      "type": "object",
      "title": "Text box",
      "description": "Text content to display",
      "properties": {
        "headline": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/box/properties/headline"
        },
        "text": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/box/properties/text"
        },
        "textAlign": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/box/properties/textAlign"
        },
        "vAlign": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/box/properties/vAlign"
        },
        "hAlign": {
          "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/box/properties/hAlign"
        },
        "link": {
          "type": "array",
          "items": {
            "$ref": "http://frontend.ruhmesmeile.com/base/atoms/link-button.schema.json"
          }
        }
      }
    },
    "className": {
      "$ref": "http://frontend.ruhmesmeile.com/content/molecules/storytelling.schema.json#/properties/className"
    }
  },
  "required": ["box"]
}
