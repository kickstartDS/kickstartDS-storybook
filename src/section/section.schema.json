{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://kickstartds.com/section.schema.json",
  "title": "Section",
  "allOf": [
    {
      "$ref": "http://frontend.ruhmesmeile.com/base/base/section.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "pattern": {
          "type": "string",
          "enum": ["none", "1", "2"],
          "default": "none"
        },
        "variant": {
          "type": "string",
          "enum": ["none", "head", "body", "highlight"],
          "default": "none"
        }
      }
    }
  ]
}
