{
  "name": "@kickstartds/design-system",
  "version": "2.5.20",
  "keywords": [],
  "homepage": "https://ruhmesmeile.com",
  "license": "SEE LICENSE IN LICENSE",
  "author": "ruhmesmeile GmbH <mail@ruhmesmeile.com> (https://ruhmesmeile.com)",
  "main": "dist/index.js",
  "types": "dist/components/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "init-tokens": "kickstartDS tokens init --token-dictionary-path tokensGeil,  --cleanup --rc-only",
    "build-tokens": "kickstartDS tokens compile --token-dictionary-path tokens --cleanup --rc-only",
    "build-storybook": "yarn build-tokens && run-p sass sass-manager schema token && DESIGN_TOKEN_GLOB=.storybook/tokens.css storybook build --output-dir storybook",
    "chromatic": "chromatic --project-token $CHROMATIC_PROJECT_TOKEN --storybook-build-dir 'storybook' --skip '@(renovate/**|dependabot/**)' --exit-zero-on-changes --exit-once-uploaded",
    "dist:js": "esbuild index=src/dist.js --outdir=dist --format=esm --bundle --minify --splitting",
    "dist:sass": "sass --load-path=node_modules src/dist.scss dist/index.css",
    "dist:components": "node scripts/bundleComponents.js",
    "dist:schema": "yarn schema && node scripts/copySchema.js && yarn typings",
    "dist:images": "cp -r static/img static/patterns static/logo.svg static/logo-dark.svg dist/",
    "dist:favicons": "cp -r static/favicon dist/",
    "prepare": "patch-package",
    "prepublishOnly": "rm -rf dist && mkdir -p dist && run-p 'build-tokens' 'schema' 'token' && run-p dist:*",
    "sass": "sass --load-path=node_modules src/index.scss static/index.css",
    "sass-manager": "sass --load-path=node_modules .storybook/manager.scss static/manager.css",
    "token": "node scripts/customPropertyExtract.js",
    "typings": "tsc",
    "watch:schema": "yarn schema && chokidar \"src/**/*.schema.json\" -c \"yarn schema {path}\"",
    "watch:token": "yarn build-tokens && yarn token && chokidar \"src/**/*-tokens.scss\" -c \"yarn token {path}\"",
    "watch:sass": "yarn sass --watch",
    "schema": "node scripts/schema.js",
    "start": "yarn sass && run-p watch:* storybook",
    "storybook": "DESIGN_TOKEN_GLOB=.storybook/tokens.css storybook dev -p 6006"
  },
  "dependencies": {
    "@bedrock-layout/primitives": "^2.2.5",
    "@kickstartds/base": "2.3.0-next.3",
    "@kickstartds/blog": "2.3.0-next.3",
    "@kickstartds/content": "2.2.0-next.2",
    "@kickstartds/core": "2.3.0-next.3",
    "@kickstartds/form": "2.3.0-next.3",
    "@kickstartds/style-dictionary": "^2.2.1-next.1",
    "classnames": "^2.3.2",
    "styled-components": "^5.3.11"
  },
  "devDependencies": {
    "@auto-it/npm": "^10.46.0",
    "@auto-it/released": "^10.46.0",
    "@kickstartds/storybook-addon-component-tokens": "1.0.0-canary.18.36.0",
    "@kickstartds/storybook-addon-jsonschema": "^2.0.0",
    "@storybook/addon-a11y": "^7.4.0",
    "@storybook/addon-actions": "^7.4.0",
    "@storybook/addon-docs": "^7.4.0",
    "@storybook/addon-essentials": "^7.4.0",
    "@storybook/addon-links": "^7.4.0",
    "@storybook/addons": "^7.4.0",
    "@storybook/react": "^7.4.0",
    "@storybook/react-vite": "^7.4.0",
    "@storybook/theming": "^7.4.0",
    "@whitespace/storybook-addon-html": "git+https://github.com/lmestel/storybook-addon-html.git#v5.4.0",
    "auto": "^10.46.0",
    "change-case": "^4.1.2",
    "chokidar-cli": "^3.0.0",
    "chromatic": "^6.19.9",
    "custom-property-extract": "^1.2.1",
    "deepmerge": "^4.3.1",
    "esbuild": "^0.18.11",
    "fast-glob": "^3.3.0",
    "fs-extra": "^11.1.1",
    "include-media": "^2.0.0",
    "json-schema-merge-allof": "^0.8.1",
    "json-schema-ref-parser": "^9.0.9",
    "json-schema-to-typescript": "^13.0.2",
    "json-schema-traverse": "^1.0.0",
    "kickstartds": "^2.0.0",
    "lazysizes": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "prettier": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.63.6",
    "storybook": "^7.4.0",
    "storybook-design-token": "3.0.0-beta.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "yarn": "^1.22.10"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
