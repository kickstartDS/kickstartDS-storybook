{
  "name": "@kickstartds/design-system",
  "version": "1.0.1",
  "author": "ruhmesmeile GmbH <mail@ruhmesmeile.com> (https://ruhmesmeile.com)",
  "homepage": "https://ruhmesmeile.com",
  "license": "SEE LICENSE IN LICENSE",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-storybook": "npm run sass && build-storybook -s static",
    "chromatic": "chromatic --project-token $CHROMATIC_PROJECT_TOKEN --build-script-name 'build-storybook' --skip '@(renovate/**|dependabot/**)' --exit-zero-on-changes --exit-once-uploaded",
    "dist:bundle": "node node_modules/@kickstartds/core/bundle dist",
    "dist:sass": "sass --load-path=node_modules src/index.scss dist/kickstartds.css",
    "prepublishOnly": "rm -rf dist && run-p dist:*",
    "sass": "sass --load-path=node_modules src/index.scss static/index.css",
    "sass:watch": "npm run sass -- --watch",
    "start": "run-p sass:watch storybook",
    "storybook": "start-storybook -p 6006 -s static"
  },
  "keywords": [],
  "dependencies": {
    "@kickstartds/base": "^1.0.0-alpha.28",
    "@kickstartds/content": "^1.0.0-alpha.30",
    "@kickstartds/core": "^1.0.0-alpha.16",
    "@kickstartds/form": "^1.0.0-alpha.8"
  },
  "devDependencies": {
    "@auto-it/npm": "^10.29.3",
    "@auto-it/released": "^10.29.3",
    "@babel/core": "^7.14.3",
    "@storybook/addon-actions": "^6.3.1",
    "@storybook/addon-essentials": "^6.3.1",
    "@storybook/addon-links": "^6.3.1",
    "@storybook/react": "^6.3.1",
    "@whitespace/storybook-addon-html": "git+https://github.com/lmestel/storybook-addon-html.git#v5.1.0",
    "auto": "^10.29.3",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.0",
    "include-media": "^1.4.10",
    "lazysizes": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sass": "^1.34.1"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "engines": {
    "yarn": "^1.22.10"
  }
}
